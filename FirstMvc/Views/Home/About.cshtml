@{
    ViewData["Title"] = "About Us";
    List<City> cities = ViewBag.Cities;
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
